<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div class="container w-screen p-6">
            <div id="header" class="flex flex-row justify-center space-x-4 p-4 h-16 rounded-md bg-indigo-500" >
                <div>GamersX Logo</div>
                <div>Home</div>
                <div>Channels</div>
                <div>Gamers</div>
                <div>Store</div>
                <div class="flex-grow max-w-xl">
                    <input class="w-full rounded-sm pl-4" type="text" placeholder="search"></input>
                </div>
            </div>
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
