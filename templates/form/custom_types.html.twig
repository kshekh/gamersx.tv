{% block topic_row %}

{{ vite_entry_script_tags('topicSelector') }}
{{ vite_entry_link_tags('topicSelector') }}

{{ vite_entry_script_tags('streamerSelector') }}
{{ vite_entry_link_tags('streamerSelector') }}

{% set searchType = value.itemType ?? form.searchType.vars.value %}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Search for a Topic</h3>
    </div>

    <div class="box-body">
        <div id="app-topic-selector" data-item-type="{{ searchType }}">
            <topic-selector></topic-selector>
        </div>
        {% for child in form.children|filter(child => not child.rendered) %}
        <div class="form-group">
            {{ form_label(child) }}
            {{ form_widget(child) }}
            {{ form_help(child) }}
            {{ form_errors(child) }}
        </div>
        {% endfor %}
        <div id="app-streamer-selector" data-item-type="{{ searchType }}">
            <streamer-selector></streamer-selector>
        </div>
    </div>
</div>
{% endblock %}
