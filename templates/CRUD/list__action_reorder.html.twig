{% if admin.hasAccess('edit', object) and admin.hasRoute('edit') %}
<a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('reorder', object, {'direction': actions.direction} ) }}">
    <i class="fa fa-angle-double-{{ actions.direction }} reorder reorder-{{ actions.direction }}"> </i> Move {{ actions.direction| capitalize }}
</a>
{% endif %}
