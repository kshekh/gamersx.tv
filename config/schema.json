{
    "title": "HomeRow Settings",
    "description": "The settings for GamersX Home Row",

    "type": "object",
    "required": [
        "rows"
    ],
    "properties": {
        "rows": {
            "type": "array",
            "title": "Rows",
            "items": {
                "type": "object",
                "required": ["title", "itemType", "items"],
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "Title",
                        "description": "Text label for the Row"
                    },
                    "sort": {
                        "type": "string",
                        "title": "Sort",
                        "description": "How to sort the embeds in this row",
                        "default": "desc",
                        "pattern": "^(asc|desc)$"
                    },
                    "itemType": {
                        "type": "string",
                        "title": "Row Type",
                        "description": "Whether the row displays streamers or games",
                        "pattern": "^(game|streamer|popular)$"
                    },
                    "items": {
                        "type": "array",
                        "title": "Row Items",
                        "description": "The items to show in this row",
                        "items": {
                            "type": "object",
                            "required": ["twitchId"],
                            "properties": {
                                "twitchId": {
                                    "type": "string",
                                    "label": "Item ID",
                                    "description": "The Twitch API game or stream ID"
                                },
                                "showArt": {
                                    "type": "boolean",
                                    "label": "Show Art",
                                    "description": "Whether to show a static image before the embed",
                                    "default": false
                                },
                                "offlineDisplayType": {
                                    "type": "string",
                                    "label": "Offline Display",
                                    "description": "What to show if the streamer is offline",
                                    "default": "art",
                                    "pattern": "^(art|stream|none)$"
                                },
                                "linkType": {
                                    "type": "string",
                                    "label": "Link Type",
                                    "description": "Whether the label links to twitch or gamersx.tv",
                                    "pattern": "^(gamersx|twitch)$",
                                    "default": "gamersx"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
